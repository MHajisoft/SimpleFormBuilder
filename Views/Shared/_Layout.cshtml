@using SimpleFormBuilder.Entity
@using SimpleFormBuilder.Util
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Form Builder</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Simple Form Builder</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @Html.IsActive("Design")" aria-current="page" href="@Url.Action("Index", "Design", new { entity = nameof(Person) })">Design</a>
                </li>
                <li class="nav-item">
                <li class="nav-item">
                    <a class="nav-link @Html.IsActive("Person")" aria-current="page" href="@Url.Action("Index", "Person")">Person</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container body-content my-3">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Simple Form Builder Application</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@* @Scripts.Render("~/bundles/bootstrap") *@
<script src="/Scripts/bootstrap.bundle.js"></script>
@RenderSection("scripts", required: false)
</body>
</html>